# Guardrail.dev Environment Configuration
# Copy this file to .env and configure for your environment

# Operating Mode
GUARDRAIL_MODE=standard                    # standard | strict

# Logging Configuration
GUARDRAIL_LOG_LEVEL=INFO                   # DEBUG | INFO | WARNING | ERROR | CRITICAL
GUARDRAIL_LOG_FILE=~/.guardrail/logs/guardrail.log
GUARDRAIL_LOG_MAX_SIZE_MB=100
GUARDRAIL_LOG_BACKUP_COUNT=5

# Database Configuration
GUARDRAIL_DB_PATH=~/.guardrail/data/guardrail.db
GUARDRAIL_DB_BACKUP_ENABLED=true
GUARDRAIL_DB_BACKUP_INTERVAL_HOURS=24

# AI Tool Paths
GUARDRAIL_CLAUDE_PATH=claude
GUARDRAIL_GEMINI_PATH=gemini
GUARDRAIL_CODEX_PATH=codex

# Guardrail Documents
GUARDRAIL_BASE_PATH=~/.guardrail/guardrails
GUARDRAIL_AGENTS_PATH=~/.guardrail/guardrails/agents

# Feature Flags
GUARDRAIL_BACKGROUND_ANALYSIS=true
GUARDRAIL_FAILURE_PREDICTION=false         # Phase 2
GUARDRAIL_PROMPT_OPTIMIZATION=false        # Phase 2
GUARDRAIL_TEAM_SYNC=false                  # Phase 2

# Team Synchronization (Optional)
GUARDRAIL_TEAM_ENABLED=false
GUARDRAIL_TEAM_SYNC_REPO=
GUARDRAIL_TEAM_SYNC_INTERVAL_HOURS=1
GUARDRAIL_TEAM_BRANCH=main

# Performance Tuning
GUARDRAIL_TIMEOUT_SECONDS=30
GUARDRAIL_MAX_RETRIES=3
GUARDRAIL_CACHE_SIZE_MB=100

# Development/Debug
GUARDRAIL_DEBUG=false
GUARDRAIL_VERBOSE=false
GUARDRAIL_DRY_RUN=false
